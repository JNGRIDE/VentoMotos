rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Cualquier usuario autenticado puede leer los perfiles de los demás (para ver nombres, etc.).
    // Un usuario solo puede crear o modificar su propio perfil.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Cualquier usuario autenticado puede leer el historial de ventas y registrar nuevas ventas.
    // Por seguridad, las ventas no se pueden modificar ni eliminar desde la aplicación.
    match /sales/{saleId} {
      allow read, create: if request.auth != null;
      allow update, delete: if false; 
    }

    // Cualquier usuario autenticado puede ver y gestionar los prospectos.
    match /prospects/{prospectId} {
      allow read, write: if request.auth != null;
    }
  }
}
