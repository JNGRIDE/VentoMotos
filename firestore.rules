rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isManager() {
      // Check if the user's profile document has the role 'Manager'
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Manager';
    }

    match /users/{userId} {
      // Any authenticated user can read profiles (to see names, avatars, etc.)
      allow read: if request.auth != null;
      // Only the user themselves or a manager can edit a profile.
      allow write: if isOwner(userId) || isManager();
    }

    match /sales/{saleId} {
      // A manager can read any sale. A salesperson can only read their own.
      allow read: if isManager() || request.auth.uid == resource.data.salespersonId;
      // A manager can create a sale for anyone. A salesperson only for themselves.
      allow create: if isManager() || request.auth.uid == request.resource.data.salespersonId;
      // For safety, disallow updates and deletes from the client.
      allow update, delete: if false; 
    }

    match /prospects/{prospectId} {
      // A manager can read any prospect. A salesperson only their own.
      allow read: if isManager() || request.auth.uid == resource.data.salespersonId;
      // A manager can write to any prospect. A salesperson can only write to their own.
      allow write: if isManager() || request.auth.uid == request.resource.data.salespersonId;
    }

    match /inventory/{motorcycleId} {
      // Any authenticated user can read the inventory (to see available models)
      allow read: if request.auth != null;
      // Only a manager can add or update inventory items
      allow write: if isManager();
    }
  }
}
