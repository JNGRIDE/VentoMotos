rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isManager() {
      // Check if the user's profile document has the role 'Manager'
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Manager';
    }

    // --- Users ---
    // Prevent privilege escalation: users cannot make themselves Managers.
    match /users/{userId} {
      allow read: if request.auth != null;

      // Allow create if (owner and role is 'Salesperson') OR manager.
      // Owner check is first to avoid calling isManager() (which reads the user doc)
      // when the user doc doesn't exist yet (self-registration).
      allow create: if (isOwner(userId) && request.resource.data.role == 'Salesperson') || isManager();

      // Allow update if (owner and role is NOT changed) OR manager.
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isManager();

      // Only manager can delete users
      allow delete: if isManager();
    }

    // --- Sales ---
    // Enforce ownership throughout lifecycle.
    match /sales/{saleId} {
      allow read: if isManager() || request.auth.uid == resource.data.salespersonId;

      // Create: New sale must belong to auth user (unless manager)
      allow create: if isManager() || request.auth.uid == request.resource.data.salespersonId;

      // Update: Existing sale must belong to auth user AND new sale must belong to auth user (no transfer)
      allow update: if isManager() || (request.auth.uid == resource.data.salespersonId && request.auth.uid == request.resource.data.salespersonId);

      // Delete: Existing sale must belong to auth user
      allow delete: if isManager() || request.auth.uid == resource.data.salespersonId;
    }

    // --- Prospects ---
    // Split write into granular permissions.
    match /prospects/{prospectId} {
      allow read: if isManager() || request.auth.uid == resource.data.salespersonId;

      // Create: New prospect belongs to auth user
      allow create: if isManager() || request.auth.uid == request.resource.data.salespersonId;

      // Update: Existing prospect belongs to auth user AND new prospect belongs to auth user (no transfer)
      allow update: if isManager() || (request.auth.uid == resource.data.salespersonId && request.auth.uid == request.resource.data.salespersonId);

      // Delete: Existing prospect belongs to auth user
      allow delete: if isManager() || request.auth.uid == resource.data.salespersonId;
    }

    // --- Inventory ---
    // Restrict what users can modify.
    match /inventory/{motorcycleId} {
      allow read: if request.auth != null;

      // Update: Manager can update anything.
      // Users can only update 'stock' and 'skus' (decrementing stock/removing sku).
      // We check that only 'stock' and 'skus' are in the affected keys.
      allow update: if isManager() || (
        request.auth != null &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stock', 'skus'])
      );

      allow create, delete: if isManager();
    }

    // --- Sprints ---
    // Keep as is, assume logic is correct for app needs.
    match /sprints/{sprintId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if isManager();
    }

    // --- Settings ---
    match /settings/{settingId} {
      allow read: if request.auth != null;
      allow write: if isManager();
    }
  }
}
